---
import Layout from "../layouts/Layout.astro";
import PageContainer from "../components/PageContainer.astro";
import Card from "../components/Card.astro";
---

<Layout title="Photos - J & A Wedding">
	<PageContainer maxWidth="lg">
		<Card>
			<h1 class="text-4xl sm:text-5xl mb-6 text-pink-600">Photos</h1>
			<div
				class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mt-8"
			>
				<div
					class="aspect-[4/3] bg-gradient-to-br from-pink-50 to-pink-100 rounded-lg flex items-center justify-center text-gray-400 text-xl border-2 border-dashed border-pink-200"
				>
					<span>Photo 1</span>
				</div>
				<div
					class="aspect-[4/3] bg-gradient-to-br from-pink-50 to-pink-100 rounded-lg flex items-center justify-center text-gray-400 text-xl border-2 border-dashed border-pink-200"
				>
					<span>Photo 2</span>
				</div>
				<div
					class="aspect-[4/3] bg-gradient-to-br from-pink-50 to-pink-100 rounded-lg flex items-center justify-center text-gray-400 text-xl border-2 border-dashed border-pink-200"
				>
					<span>Photo 3</span>
				</div>
				<div
					class="aspect-[4/3] bg-gradient-to-br from-pink-50 to-pink-100 rounded-lg flex items-center justify-center text-gray-400 text-xl border-2 border-dashed border-pink-200"
				>
					<span>Photo 4</span>
				</div>
				<div
					class="aspect-[4/3] bg-gradient-to-br from-pink-50 to-pink-100 rounded-lg flex items-center justify-center text-gray-400 text-xl border-2 border-dashed border-pink-200"
				>
					<span>Photo 5</span>
				</div>
				<div
					class="aspect-[4/3] bg-gradient-to-br from-pink-50 to-pink-100 rounded-lg flex items-center justify-center text-gray-400 text-xl border-2 border-dashed border-pink-200"
				>
					<span>Photo 6</span>
				</div>
			</div>
		</Card>
	</PageContainer>
</Layout>
