---
import { getEntry } from "astro:content";
import Card from "../components/Card.astro";
import PageContainer from "../components/PageContainer.astro";
import Layout from "../layouts/Layout.astro";

const home = await getEntry("home", "home");
if (!home) {
	throw new Error("Home content entry not found");
}
---

<Layout title="Home - J & A Wedding">
	<div
		class="bg-gradient-to-br from-pink-50 to-pink-100 py-20 sm:py-28 text-center mb-20"
	>
		<div class="max-w-3xl mx-auto px-4">
			<h1 class="text-5xl sm:text-6xl mb-6 tracking-widest text-pink-600">
				{home.data.title}
			</h1>
			<p class="text-2xl sm:text-3xl mb-8 text-gray-700 italic">
				{home.data.subtitle}
			</p>
			<div class="bg-white rounded-lg p-8 mb-10 shadow-md max-w-xl mx-auto">
				<p class="text-xl sm:text-2xl mb-3 text-pink-600 font-semibold">
					{home.data.dateLabel}
				</p>
				<p class="text-lg sm:text-xl text-gray-700 leading-relaxed whitespace-pre-line">
					{home.data.dateDetail}
				</p>
			</div>
			<div class="flex gap-4 justify-center flex-wrap">
				<a
					href="/our-story"
					class="px-8 py-4 border-2 border-pink-600 text-pink-600 rounded-lg text-lg font-semibold no-underline transition-all hover:bg-pink-600 hover:text-white hover:shadow-md"
				>
					Our Story
				</a>
			</div>
		</div>
	</div>
	<PageContainer maxWidth="lg" className="pb-16">
		<Card className="text-center mb-12">
			<h2 class="text-3xl sm:text-4xl mb-6 text-pink-600">
				Join Us for Our Special Day
			</h2>
			<p
				class="max-w-2xl mx-auto text-lg text-gray-600 leading-relaxed whitespace-pre-line"
			>
				{home.data.intro}
			</p>
		</Card>
		<Card>
			<h2 class="text-3xl sm:text-4xl mb-10 text-center text-pink-600">
				Quick Links
			</h2>
			<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
				<a
					href="/travel"
					class="bg-pink-50 p-6 rounded-lg no-underline transition-all border border-pink-200 hover:border-pink-400 hover:shadow-md hover:-translate-y-1 text-center"
				>
					<h3 class="text-xl mb-2 text-pink-600 mt-0">Travel</h3>
					<p class="text-gray-600 m-0 text-sm">
						Accommodations and travel information
					</p>
				</a>
				<a
					href="/faq"
					class="bg-pink-50 p-6 rounded-lg no-underline transition-all border border-pink-200 hover:border-pink-400 hover:shadow-md hover:-translate-y-1 text-center"
				>
					<h3 class="text-xl mb-2 text-pink-600 mt-0">FAQ</h3>
					<p class="text-gray-600 m-0 text-sm">Frequently asked questions</p>
				</a>
				<a
					href="/registry"
					class="bg-pink-50 p-6 rounded-lg no-underline transition-all border border-pink-200 hover:border-pink-400 hover:shadow-md hover:-translate-y-1 text-center"
				>
					<h3 class="text-xl mb-2 text-pink-600 mt-0">Registry</h3>
					<p class="text-gray-600 m-0 text-sm">
						Wedding registry information
					</p>
				</a>
				<a
					href="/photos"
					class="bg-pink-50 p-6 rounded-lg no-underline transition-all border border-pink-200 hover:border-pink-400 hover:shadow-md hover:-translate-y-1 text-center"
				>
					<h3 class="text-xl mb-2 text-pink-600 mt-0">Photos</h3>
					<p class="text-gray-600 m-0 text-sm">View wedding photos</p>
				</a>
			</div>
		</Card>
	</PageContainer>
</Layout>
