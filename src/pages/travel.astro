---
import { getEntry } from "astro:content";
import Card from "../components/Card.astro";
import PageContainer from "../components/PageContainer.astro";
import Layout from "../layouts/Layout.astro";

const travel = await getEntry("travel", "travel");
if (!travel) {
  throw new Error("Travel content entry not found");
}
---

<Layout title="Travel - J & A Wedding">
  <PageContainer maxWidth="lg">
    <Card>
      <h1 class="text-4xl sm:text-5xl mb-6 text-pink-600">
        {travel.data.title}
      </h1>
      <section class="mb-12 last:mb-0">
        <h2 class="text-2xl sm:text-3xl mb-4 text-pink-600">Venue Location</h2>
        <div class="bg-pink-50 p-6 rounded-lg mt-4 border-l-4 border-pink-600">
          <h3 class="text-xl mb-2 text-pink-600 mt-0">
            {travel.data.venue.name}
          </h3>
          <p class="text-gray-600 m-0 whitespace-pre-line">
            {travel.data.venue.address}
          </p>
        </div>
      </section>
      <section class="mb-12 last:mb-0">
        <h2 class="text-2xl sm:text-3xl mb-4 text-pink-600">Accommodations</h2>
        <div class="grid gap-6 mt-6">
          {
            travel.data.accommodations.map((accommodation) => (
              <div class="bg-pink-50 p-6 rounded-lg border-l-4 border-pink-600">
                <h3 class="text-xl mb-3 text-pink-600 mt-0">
                  {accommodation.name}
                </h3>
                <p class="text-gray-600 my-2">{accommodation.address}</p>
                <p class="text-gray-600 my-2">Phone: {accommodation.phone}</p>
              </div>
            ))
          }
        </div>
      </section>
      <section class="mb-12 last:mb-0">
        <h2 class="text-2xl sm:text-3xl mb-6 text-pink-600">Transportation</h2>

        <div
          class="bg-pink-50 p-6 rounded-lg border-l-4 border-pink-600 space-y-6"
        >
          <!-- Airport -->
          <div>
            <h3 class="text-lg font-semibold text-pink-700 mb-1">Flying In</h3>
            <p class="text-gray-700 m-0">
              Most guests will fly into <strong
                >{travel.data.transportation.airport.name}</strong
              >, about {travel.data.transportation.airport.driveTime} from Boulder.
            </p>
          </div>

          <!-- Getting to Boulder -->
          <div>
            <h3 class="text-lg font-semibold text-pink-700 mb-2">
              Getting to Boulder
            </h3>
            <ul class="list-disc list-inside space-y-1 text-gray-700">
              {
                travel.data.transportation.options.map((option) => (
                  <li>
                    <strong>{option.title}:</strong> {option.description}
                  </li>
                ))
              }
            </ul>
          </div>

          <!-- Local -->
          <div>
            <h3 class="text-lg font-semibold text-pink-700 mb-1">
              Around Town
            </h3>
            <p class="text-gray-700 m-0 whitespace-pre-line">
              {travel.data.transportation.local.description}
            </p>
          </div>
        </div>
      </section>
    </Card>
  </PageContainer>
</Layout>
