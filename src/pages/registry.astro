---
import { Image } from "astro:assets";
import venmo from "../assets/venmo.png";
import Card from "../components/Card.astro";
import PageContainer from "../components/PageContainer.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Registry - J & A Wedding">
	<PageContainer maxWidth="lg">
		<Card>
			<h1 class="text-4xl sm:text-5xl mb-6 text-pink-600">
				Wedding Registry
			</h1>
			<p class="mb-8 text-lg text-gray-600">
				Your presence at our wedding is the greatest gift of all.
				However, if you would like to honor us with a gift, we're saving
				for our house fund.
			</p>

			<div class="flex justify-center">
				<div class="bg-white rounded-lg p-8 max-w-md w-full shadow-lg">
					<div class="text-center">
						<h2
							class="text-2xl sm:text-3xl font-sans text-gray-800 mb-2"
						>
							John Korhel
						</h2>
						<p class="text-lg font-sans text-gray-500 mb-6">
							@John-Korhel-2
						</p>
						<Image
							src={venmo}
							alt="A bird sitting on a nest of eggs."
						/>

						<p
							class="text-2xl font-bold italic font-sans text-black"
						>
							venmo
						</p>
					</div>
				</div>
			</div>
		</Card>
	</PageContainer>
</Layout>
